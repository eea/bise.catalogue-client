@import 'catalogue.mixin.styl'

CELL_BEFORE_COLOR = #666666
CELL_SMALL_COLOR = #999999


cell-title()
    -webkit-border-radius n
    -moz-border-radius n
    border-radius n


ul.catalogue-results
    list-style: none
    margin: 0 auto
    padding: 0
    font-family: Helvetica, sans-serif
    font-size: 14px

.article_cell

    border-bottom: 1px dashed #cbcbcb
    padding-top: 5px
    padding-bottom: 5px

    .cell-title
        font-size: 12px
        font-family: Verdana
        color: #86a000

        a
            font-weight: bold
            text-decoration: none
            color: BASE_GREEN

    small
        color: CELL_SMALL_COLOR
        font-size: 12px

    .hits
        border-left: 3px solid #8ea04c
        border-top: 1px solid #8ea04c
        font-size: 10px
        line-height: 10px

        -webkit-box-shadow:  1px 2px 2px 2px rgba(0, 0, 0, 0.3)
        box-shadow:  1px 2px 2px 2px rgba(0, 0, 0, 0.3)

    p.hit
        background: white
        color: #6b6b6b
        margin-bottom: 0

    em
        // color: #86a000
        font-weight: bold
        font-style: normal


