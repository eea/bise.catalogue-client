@import 'catalogue.mixin.styl'

.catalogue-toolbar
    background: BASE_GREEN

    border-radius(5px)

    margin-bottom: 15px
    padding: 12px

    .areas

        float: left
        width: 22% !important
        overflow:hidden

        background: #1eaa46
        background: -moz-linear-gradient(top,  #1eaa46 1%, #168130 100%)
        background: -webkit-gradient(linear, left top, left bottom, color-stop(1%,#1eaa46), color-stop(100%,#168130))
        background: -webkit-linear-gradient(top,  #1eaa46 1%,#168130 100%)
        background: -o-linear-gradient(top,  #1eaa46 1%,#168130 100%)
        background: -ms-linear-gradient(top,  #1eaa46 1%,#168130 100%)
        background: linear-gradient(to bottom,  #1eaa46 1%,#168130 100%)

        border-radius(5px)
        border: 1px solid BORDER_GREEN

        select
            color: white
            font-weight: bold
            padding: 5px
            float:left
            width: 100%
            height 30px
            padding-left: 20px
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            border: none;
            background: transparent

    form
        margin: 0

    input
        background-color: rgb(255, 255, 255)

        border: 1px solid rbg(204,204,204)
        border-radius(4px)

        box-shadow: rgba(0, 0, 0, 0.0745098) 0px 1px 1px 0px inset
        box-sizing: border-box
        color: rgb(85, 85, 85)
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
        font-size: 14px
        height: 30px
        letter-spacing: normal
        line-height: 20px

        margin: 0
        margin-left: 1.404255319148934%

        min-height: 30px

        padding: 4px 6px
        text-align: start
        text-indent: 0px
        text-shadow: none
        text-transform: none
        transition-delay: 0s, 0s
        transition-duration: 0.2s, 0.2s
        transition-property: border, box-shadow
        transition-timing-function: linear, linear
        vertical-align: middle
        width: 220px

        word-spacing: 0px
        writing-mode: lr-tb

.catalogue-container

    .catalogue-sidebar

        .catalogue-queries
            font-size: 16px
            color: white
            display: none
            background: BASE_GREEN
            border-radius(5px)
            margin-bottom: 15px
            padding: 10px

            ul
                list-style: none !important
                padding: 0
                margin: 0px
                li
                    display: block
                    height: 20px
                    line-height: 20px
                    .close
                        color: #107327
                        float: right
                        font-size: 20px
                        cursor:pointer
                        &:hover
                            color: white
            small
                font-size: 12px
                text-align:right

        .catalogue-facets
            min-height: 200px
            margin-bottom: 15px
            font-size: 14px

            legend
                width: 100%
                border-bottom: 1px solid #c2c2c2

            ul
                list-style: none
                -webkit-padding-start: 10px
                li a
                    text-decoration: none
                    color: BASE_GREEN

    .catalogue-content
        background: white
        ul
            list-style: none !important

.btn
    -webkit-box-shadow: rgba(255, 255, 255, 0.2) 0px 1px 0px 0px inset, rgba(0, 0, 0, 0.0470588) 0px 1px 2px 0px
    -webkit-transition-delay: 0s
    -webkit-transition-duration: 0s
    -webkit-transition-property: all
    -webkit-transition-timing-function: ease
    background-color: rgb(245, 245, 245)
    background-image: linear-gradient(rgb(255, 255, 255), rgb(230, 230, 230))
    background-position: 0% 0%
    background-repeat: repeat-x
    border-bottom-color: rgb(179, 179, 179)
    border-bottom-left-radius: 4px
    border-bottom-right-radius: 4px
    border-bottom-style: solid
    border-bottom-width: 1px
    border-image-outset: 0px
    border-image-repeat: stretch
    border-image-slice: 100%
    border-image-source: none
    border-image-width: 1
    border-left-color: rgb(204, 204, 204)
    border-left-style: solid
    border-left-width: 1px
    border-right-color: rgb(204, 204, 204)
    border-right-style: solid
    border-right-width: 1px
    border-top-color: rgb(204, 204, 204)
    border-top-left-radius: 4px
    border-top-right-radius: 4px
    border-top-style: solid
    border-top-width: 1px
    box-shadow: rgba(255, 255, 255, 0.2) 0px 1px 0px 0px inset, rgba(0, 0, 0, 0.0470588) 0px 1px 2px 0px
    color: rgb(51, 51, 51)
    cursor: pointer
    display: inline-block
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
    font-size: 14px
    height: 30px
    line-height: 20px
    margin-bottom: 0px
    outline-color: rgb(51, 51, 51)
    outline-style: none
    outline-width: 0px
    padding-bottom: 4px
    padding-left: 12px
    padding-right: 12px
    padding-top: 4px
    text-align: center
    text-decoration: none
    text-shadow: rgba(255, 255, 255, 0.74902) 0px 1px 1px
    transition-delay: 0s
    transition-duration: 0s
    transition-property: all
    transition-timing-function: ease
    vertical-align: middle
    width: 88px
