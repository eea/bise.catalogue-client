@import 'catalogue.mixin.styl'


#catalogue-app
    font-family: "Helvetica Neue Light", "HelveticaNeue-Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;

    .catalogue-sidebar
        width: 25.914893617021278%
        float: left;

    .catalogue-content
        // float: left
        margin-left: 4%
        // margin-left: 29%
        // width: 70.95744680851064%
        // width: 70%
        // box-sizing: border-box;
        // display: block;
        // font-family: 'Helvetica Neue Light', HelveticaNeue-Light, 'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif;
        // height: 89px;
        // margin-left: 20px;
        // width: 661px;

.catalogue-toolbar
    border-radius(5px)
    padding: 12px
    margin-bottom: 35px
    background: BISE_GREEN

    .select-field
        float: left
        width: 23% !important
        overflow:hidden

        background: BISE_GREEN
        border-radius(5px)
        border: 2px solid white
        padding 5px 10px

        select
            color: white
            font-size: 0.9em
            // font-weight: bold
            // padding: 5px
            float:left
            width: 100%
            height 30px
            padding-left: 20px

            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;

            border: none;
            background: transparent

    form
        margin: 0

    input
        padding 10px 15px
        // padding: 4px 6px
        margin: 0
        margin-left: 1.404255319148934%
        width: 270px

        border-radius(4px)
        border: 2px solid DARK_GREEN
        // border: 2px solid white

        font-size: 14px
        line-height: 22px

    button
        border-radius(5px)
        background: BISE_GREEN
        border: 2px solid DARK_GREEN
        margin-left: 7px
        padding: 10px 15px
        color: white
        font-size: 1em
        line-height: 22px




#catalogue-queries
    font-size: 1.5em
    color: white
    background: BISE_GREEN
    border-radius(5px)
    margin-bottom: 15px
    padding: 10px

    ul
        list-style: none !important
        padding: 0 !important
        margin: 0 !important
        li
            margin-left: 0 !important
            display: block !important
            line-height: 20px
            font-size: 1.5em

            list-style: none !important
            list-style-image: none !important
            list-style-position: inside !important
            list-style-type: none

    #results-count
        margin-top: 1em
        font-size: 0.8em
        text-align: left




.catalogue-facet
    border-radius(3px)
    border 1px solid LIGHT_GRAY
    margin-bottom: 10px
    font-size: 14px

    .facet-header
        padding: 4px 7px
        background: LIGHT_GRAY

    legend
        cursor: pointer
        // color: #707070
        color: DARK_GRAY
        // font-size: 17px
        font-size: 0.9em
        width: 94%
        font-weight: bold

    ul
        border-top: 1px solid #b8b8b8
        list-style: none
        margin: 0px
        -webkit-padding-start: 0px

        // padding-top: 14px
        li
            a
                display:block
                cursor: pointer
                border-bottom: 1px solid #d7d7d7
                padding: 10px 12px
                &:hover
                    color: white
                    background: BISE_GREEN

            .facet-count
                float: right
                margin-right: 5px
                color: #575757
                font-weight: bold
                border: 1px solid #e4e4e4
                padding: 3px 7px
                border-radius(5px)
                margin-top: 6px

            .facet-remove
                border-radius(5px)
                font-size: 0.7em
                font-weight: bold
                padding: 4px 7px
                border: 1px solid #c40000
                color: #c40000 !important
                float: right
                margin-right: 5px
                margin-top: 4px

#content ul
    list-style: none !important
    margin: 0 !important
    padding: 0 !important
    li
        margin-bottom: 0

.catalogue-no-results
    // border: 2px dashed #cbcbcb
    height: 380px

    h1
        text-align: center
        font-style: italic
        font-size: 42px
        position: relative
        height: 100px
        width: 90%
        left: 50%
        top: 50%
        color: #bbbbbb
        transform: translate(-50%, -50%)
        -webkit-transform: translate(-50%, -50%)
        -moz-transform: translate(-50%, -50%)
        -ms-transform: translate(-50%, -50%)


